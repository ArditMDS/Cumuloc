{% endblock %}

{% block content %}
    <main>
        <div class="createProductTitle">
            <h2>Tous nos Produits</h2>
            <div>
                <a href="/admin/create">
                    <svg xmlns="http://www.w3.org/2000/svg" width="2em" height="2em" viewBox="0 0 24 24"><g fill="lightgreen" fill-rule="evenodd" clip-rule="evenodd">
