{% extends 'base.html.twig' %}

{% block stylesheets %}   
            <link href="{{ asset('style/form.css') }}" rel="stylesheet" type="text/css"/>    
        {% endblock %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {{ form_start(form) }}
        <div>
            {{ form_errors(form) }}
        </div>
        <div class="form-field">
            <div class="form-label">
                {{ form_label(form.name, null, {
                    label: 'Nom du nuage'
                })}}
            </div>
            <div>
                {{ form_widget(form.name, {'attr': {'class': 'form-input'}}) }}
            </div>
        </div>
        <div class="form-field">
            <div class="form-label">
                {{ form_label(form.description, null, {
                    label: 'Description'
                })}}
            </div>
            <div>
                {{ form_widget(form.description, {'attr': {'class': 'form-input'}}) }}
            </div>
        </div>
        <div class="form-field">
            <div class="form-label">
                {{ form_label(form.price, null, {
                    label: 'Prix'
                })}}
            </div>
            <div>
                {{ form_widget(form.price, {'attr': {'class': 'form-input'}}) }}
            </div>
        </div>
        <div class="form-field">
            <div class="form-label">
                {{ form_label(form.quantity_left, null, {
                    label: 'Stock'
                })}}
            </div>
            <div>
                {{ form_widget(form.quantity_left, {'attr': {'class': 'form-input'}}) }}
            </div>
        </div>
        <div class="form-field">
            <div class="form-label">
                {{ form_label(form.thumbnail, null, {
                    label: 'Thumbnail'
                })}}
            </div>
            <div>
                {{ form_widget(form.thumbnail, {'attr': {'class': 'form-input'}}) }}
            </div>
        </div>
        <button type="submit">Valider</button>
    {{ form_end(form) }}
{% endblock %}
